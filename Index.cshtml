@model List<CurrencyDetails>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Döviz Kurları</title>
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <div class="container">
        <table>
            <thead>
                <tr>
                    <th>Döviz Cinsi</th>
                    <th>Döviz Alış</th>
                    <th>Döviz Satış</th>
                </tr>
            </thead>
            <tbody>
                @{
                    for (int i = 0; i < Model.Count; i++)
                    {
                            <tr>
                                <td>@Model[i].Currency_</td>
                                <td>@Model[i].Buying_</td>
                                <td>@Model[i].Selling_</td>
                            </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</body>
</html>
